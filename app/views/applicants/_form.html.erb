<%= form_for(@applicant) do |f| %>
  <% if @applicant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@applicant.errors.count, "error") %> prohibited this applicant from being saved:</h2>

      <ul>
      <% @applicant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <small>Os campos marcados com * são de preenchimente obrigatório</small>
  <br />
  <br />
  <div class="field">
    <%= f.label :name, "Nome*" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :last_name, "Sobrenome*" %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :email, "E-mail*" %><br />
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone_1, "Telefone*" %><br />
    <%= f.text_field :phone_1 %>
  </div>
  <div class="field">
    <%= f.label :organization, "Organização / Area de atuação" %><br />
    <%= f.text_field :organization %>
  </div>
  <div class="field">
    <%= f.label :address, "Endereço*" %><br />
    <%= f.text_field :address %>
  </div>
  
  <% if request.params[:action] == "new" %>
    <div class="field padding">
      <label>Anexo do documento de confirmação: <p>Pedimos esse documento, pois 
      as vagas do evento são limitadas. Ex.: Print da passagem para Curitiba, 
      ou sua reserva de hotel.</p>
      <br /> 
        
      <%= f.label :confirm, "Arquivo de confirmação*", id: "arquivo-btn" %><br />
      <%= f.file_field :confirm %>
    </div>
  <% end %>
  
  <h5>* Campo obrigatório.</h5>
  
  <div class="actions">
    <%= f.submit "Enviar >", id: "enviar-btn" %>
  </div>

<% end %>
